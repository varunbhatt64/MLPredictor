<%- include ("partials/header.ejs") %>
<div class="ui main text container">
    <div class="ui huge header">Edit Algorithm - <%=algorithm.name%></div>
    <form class="ui form" action="/algorithms/<%=algorithm._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="algorithm[name]" placeholder="name" value="<%=algorithm.name%>">
        </div>        
        <div class="field">
            <label>Desription</label>
            <textarea name="algorithm[description]" placeholder="description"><%=algorithm.description%></textarea>
        </div>

        <input class="ui violet basic button" type="submit" value="Update">
        <a class="ui violet basic button" href="/algorithms">Cancel</a>
    </form>
</div>

<%- include ("partials/footer.ejs") %>