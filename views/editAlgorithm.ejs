<%- include ("partials/header.ejs") %>
<div class="ui main text container">
    <div class="ui huge header">Edit Algorithm - <%=algorithm.name%></div>
    <form class="ui form" action="/algorithms/<%=algorithm._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="algorithm[name]" placeholder="name" value="<%=algorithm.name%>">
        </div>        
        <div class="field">
            <label>Type</label>
            <div class="inline fields">
                <div class="field">
                    <div class="ui radio checkbox">
                        <input type="radio" name="algorithm[type]" value="regression" <%=algorithm.type === 'regression' ? "checked" : "" %>>
                        <label>Regression</label>
                    </div>
                </div>
                <div class="field">
                    <div class="ui radio checkbox">
                        <input type="radio" name="algorithm[type]" value="classification" <%=algorithm.type === 'classification' ? "checked" : ""%>>
                        <label>Classification</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="field">
            <label>Desription</label>
            <textarea name="algorithm[description]" placeholder="description"><%=algorithm.description%></textarea>
        </div>

        <input class="ui violet basic button" type="submit" value="Update">
        <a class="ui violet basic button" href="/algorithms">Cancel</a>
    </form>
</div>

<%- include ("partials/footer.ejs") %>